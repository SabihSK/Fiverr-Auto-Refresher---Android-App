<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/panelContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/panel_background"
        android:padding="20dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textAutoRefreshInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Fiverr Auto Refresher"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/color_on_surface_dark" />

        <TextView
            android:id="@+id/textDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Set your refresh interval and start. Tap Test runs a one-time refresh."
            android:textColor="@color/color_on_surface_dark"
            android:textSize="14sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputInterval"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:boxStrokeColor="@color/interval_box_stroke"
            app:boxBackgroundColor="@android:color/transparent"
            app:boxStrokeWidth="2dp"
            app:boxStrokeWidthFocused="2dp"
            app:hintEnabled="true"
            app:hintTextColor="@android:color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editIntervalMinutes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Refresh interval (minutes)"
                android:inputType="number"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/buttonStartAutomation"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_primary"
            android:text="Start Automation"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium" />

        <Button
            android:id="@+id/buttonStopAutomation"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_stop"
            android:text="Stop Automation"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium" />

        <Button
            android:id="@+id/buttonTapTest"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_secondary"
            android:text="Tap Test"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium" />

        <Button
            android:id="@+id/buttonOpenFiverr"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_secondary"
            android:text="Open Fiverr"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium" />

        <Button
            android:id="@+id/buttonBatterySettings"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_secondary"
            android:text="Battery Optimization"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium" />

        <Button
            android:id="@+id/buttonAccessibilitySettings"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_secondary"
            android:text="Accessibility Settings"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/textTips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:text="Tip: Pin Fiverr Auto Refresher in Recents (if your device supports it) to reduce background kills."
            android:textColor="@color/color_on_surface_dark"
            android:textSize="13sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
